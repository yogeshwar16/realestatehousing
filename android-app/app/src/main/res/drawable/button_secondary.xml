<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/secondary_dark" />
            <solid android:color="@color/secondary_light" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/button_disabled" />
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/button_secondary" />
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
</selector>
